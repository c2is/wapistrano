{% extends 'WapistranoProfileBundle::base.html.twig' %}
{% block content %}

<div class="primary formLogin" style="margin:0 auto">
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

<form action="{{ path('login_check') }}" method="post">

    <div class="form-group">
    <label for="username">Login :</label>
    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
    </div>

    <div class="form-group">
    <label for="password">Mot de passe :</label>
    <input type="password" class="form-control" id="password" name="_password" />
    </div>
    {#
        Si vous voulez contrôler l'URL vers laquelle l'utilisateur est redirigé en cas de succès
        (plus de détails ci-dessous)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit" class="btn btn-default btn-sm">login</button>
</form>

</div>
{% endblock content %}