{% extends 'WapistranoCoreBundle::base_popin.html.twig' %}
{% form_theme form 'WapistranoCoreBundle:Form:fields.html.twig' %}
{% block content %}
<div id="flashMessagePopin" class="" style="display:none">
    <span id="flashMessagePopinText"></span>
    <i id="flashMessagePopinClose" class="glyphicon glyphicon-remove" style="float:right"></i>
</div>
{{ form_start(form, { 'attr': {'class': 'form-horizontal', id : 'sendFormProject'} }) }}
<div class="box primary">
    <div class="body collapse in" id="div1">
        <div class="form-group">
            {{ form_label(form.name, null, { 'attr': {'class': 'control-label col-lg-4'} }) }}
            <div class="col-lg-4">
                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            <div class="col-lg-4">
                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
    </div>
</div>

{{ form_widget(form.save, { 'attr': {'class': 'btn btn-success btn-sm btn-grad'} }) }}
{{ form_end(form, {'render_rest': true}) }}
{% endblock content %}