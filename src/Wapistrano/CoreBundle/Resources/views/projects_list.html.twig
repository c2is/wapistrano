{% extends 'WapistranoCoreBundle::base.html.twig' %}
{% block content %}

    <div class="box primary">
        <header>
            <div class="icons">
                <i class="fa fa-building-o"></i>
            </div>
            <h5>{{ title }} {{ sectionTitle }}</h5>
            <div class="toolbar">

            </div>
        </header>
        {% if null != flashMessage %}
        <div id="flashMessage" class="" style="">
            <i id="flashMessageClose" class="glyphicon glyphicon-remove" style="float:right"></i>
           {{ flashMessage }}

        </div>
        {% endif %}
        <div id="collapse2" class="body">
        <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>

        {% for project in projects %}
            <tr>
                <td>

                    <a href="{{ render(controller('WapistranoCoreBundle:Projects:getUrl', { 'action': 'Edit', 'id': project.id })) }}">{{ project.getName }}</a></td>
                <td>Internet Explorer 4.0</td>
                <td><a href="{{ render(controller('WapistranoCoreBundle:Projects:getUrl', { 'action': 'Delete', 'id': project.id })) }}" class="btn btn-danger btn-xs btn-grad confirm" data-original-title="" title="">
                            <i class="glyphicon glyphicon-remove"></i>
                </a></td>
            </tr>
        {% endfor %}

        </tbody>
        </table>
        </div>
    </div>

    <script language="javascript">

        $( document ).ready(function() {
            $(".confirm").confirm();
            $.confirm.options = {
                text: "Are you sure you want to delete this project ?",
                title: "Danger zone !!!",
                confirmButton: "Yes",
                cancelButton: "Cancel"
            }
        });

    </script>
{% endblock content %}

