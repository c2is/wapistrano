{% extends 'WapistranoCoreBundle::base.html.twig' %}
{% block content %}

    <div class="box primary">
        <header>
            <div class="icons">
                <i class="fa fa-building-o"></i>
            </div>
            <h5>{{ title }} {{ sectionTitle }}</h5>
            <div class="toolbar">

            </div>
        </header>
        {% if null != flashMessage %}
        <div id="flashMessage" class="" style="">
            <i id="flashMessageClose" class="glyphicon glyphicon-remove" style="float:right"></i>
           {{ flashMessage }}

        </div>
        {% endif %}
        <div id="collapse3" class="body">
        <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>

        {% for recipe in recipes %}
            <tr>
                <td>

                    <a href="{{ render(controller('WapistranoCoreBundle:Recipes:getUrl', { 'action': 'Edit', 'id': recipe.id })) }}">{{ recipe.getName }}
                    </a>
                </td>
                <td>Internet Explorer 4.0</td>
                <td>
                    <a href="{{ render(controller('WapistranoCoreBundle:Recipes:getUrl', { 'action': 'Edit', 'id': recipe.id })) }}" class="btn btn-success btn-xs btn-grad" data-original-title="" title="">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ render(controller('WapistranoCoreBundle:Recipes:getUrl', { 'action': 'Delete', 'id': recipe.id })) }}" class="btn btn-danger btn-xs btn-grad confirm" data-original-title="" title="">
                            <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
        </table>
        </div>
    </div>

    <script language="javascript">

        $( document ).ready(function() {
            $(".confirm").confirm();
            $.confirm.options = {
                text: "Are you sure you want to delete this recipe ?",
                title: "Danger zone !!!",
                confirmButton: "Yes",
                cancelButton: "Cancel"
            }
        });

    </script>
{% endblock content %}

