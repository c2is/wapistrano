<table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Value</th>
        <th>Prompt?</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
{% for configuration in configurations %}

            <tr>
                <td>{{ configuration.name }}</td>
                <td>{{ configuration.value }}</td>
                <td>{{ configuration.promptOndeploy }}</td>
                <td>
                    <a href="{{ path('projectsConfigurationEdit', { 'projectId': projectId, "configurationId" : configuration.id }) }}" class="btn btn-success btn-xs btn-grad popConfigurationAjax">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a href="{{ path('projectsConfigurationDelete', { 'projectId': projectId, "configurationId" : configuration.id }) }}" class="btn btn-danger btn-xs btn-grad confirm">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </td>
            </tr>

{% endfor %}
    </tbody>
</table>

{% if isAjax is defined %}
<script language="javaScript">
    $( document ).ready(  function(  ) {
        $(".confirm").confirm();

    });
</script>
{% endif %}