{% extends 'WapistranoCoreBundle::base.html.twig' %}
{% block content %}

    <div class="box primary">
        <header>
            <div class="icons">
                <i class="fa fa-building-o"></i>
            </div>
            <h5>{{ project.name }}</h5>
            <div class="toolbar">

            </div>
        </header>
        {% if null != flashMessage %}
        <div id="flashMessage" class="" style="">
            <i id="flashMessageClose" class="glyphicon glyphicon-remove" style="float:right"></i>
           {{ flashMessage }}

        </div>
        {% endif %}

    </div>

    <div id="collapse2" class="body">
        <div class="col-lg-6">
            <div class="box">
                <div class="body">
                    <div id="headBoxLeft">
                    {{ project.name }}
                    <br>
                    {{ project.description }}
                        <div class="action">
                            <a href="{{ render(controller('WapistranoCoreBundle:Projects:getUrl', { 'action': 'Edit', 'id': project.id })) }}" class="btn btn-success btn-xs btn-grad" data-original-title="" title="">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                            <a href="{{ render(controller('WapistranoCoreBundle:Projects:getUrl', { 'action': 'Delete', 'id': project.id })) }}" class="btn btn-danger btn-xs btn-grad confirm">
                                <i class="glyphicon glyphicon-remove"></i>
                            </a>
                        </div>
                    </div>


                </div><!-- /.body -->
            </div><!-- /.box -->
        </div>
        <div class="col-lg-6">
            <div class="box">
                <div class="body">
                    <div id="headBoxRight">
                        aze

                    </div><!-- /#trigo -->
                </div><!-- /.body -->
            </div><!-- /.box -->
        </div>
    </div>

<div id="collapse1" class="body">
    <div class="col-lg-12">
        <div class="box">
            <div class="body">
            <h4>Project configurations
                <a href="{{ newStageUrl }}" class="btn btn-success btn-xs btn-grad popDefaultAjax">
                    <i class="glyphicon glyphicon-plus"></i>
                </a>
            </h4>
                <div id="popup"></div>
                <div id="configurationList">
                    {{ wapi_render_configuration_list({"projectId" : '11'}) }}
                </div>

            </div>
        </div>
    </div>
</div>
    <script language="javascript">


        $( document ).ready(function() {
            $(".confirm").confirm();
            $.confirm.options = {
                text: "Are you sure you want to delete this project ?",
                title: "Danger zone !!!",
                confirmButton: "Yes",
                cancelButton: "Cancel"
            }

        });

        function updateConfigurationList(projectId) {
            var url = "http://localhost/wapistrano/web/app_dev.php/projects/" + projectId + "/project_configuration/list";
            var oParam = {};
            var displayMessage = function(data){
                $("#configurationList").html((data || ''));
            };
            loadData(url,"html",displayMessage,oParam);

        }

    </script>
{% endblock content %}

