{% extends 'WapistranoCoreBundle::base.html.twig' %}
{% block content %}

    <div class="box primary">
        <header>
            <div class="icons">
                <i class="fa fa-building-o"></i>
            </div>
            <h5>{{ barTitle }}</h5>
            <div class="toolbar">

            </div>
        </header>
        {% if null != flashMessage %}
        <div id="flashMessage" class="" style="">
            <i id="flashMessageClose" class="glyphicon glyphicon-remove" style="float:right"></i>
           {{ flashMessage }}

        </div>
        {% endif %}
        <div id="collapse3" class="body">
        <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
        <thead>
        <tr>
            <th>Login</th>
            <th>Email</th>
            <th>Admin</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>

        {% for user in users %}
            <tr>
                <td>
                    <a href="{{ path('usersEdit', { 'id': user.id }) }}">{{ user.login }}</a>
                </td>
                <td>{{ user.email }}</td>
                <td>{{ user.admin }}</td>
                <td>
                    <a href="{{ path('projectsDelete', { 'id': user.id }) }}" class="btn btn-danger btn-xs btn-grad confirm">
                    <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
        </table>
        </div>
    </div>


{% endblock content %}

